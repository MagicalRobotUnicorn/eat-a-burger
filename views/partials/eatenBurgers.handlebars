<table class="table table-hover">
  <thead class="tableHeading">
    <tr>
      <th scope="col">Burger Name</th>
      <th scope="col">Wanna Delete It?</th>
    </tr>
  </thead>
  <tbody>
    {{#if eatenBurgers}}
    {{#each eatenBurgers}}
    <tr>
      <th scope="row">{{this.burger_name}}</th>
      <td><button type="button" class="btn btn-sm btn-outline-info innerButtons deleteBurger" data-id="{{this.burger_id}}">Delete it!</button>
      </td>
    </tr>
    {{/each}}
    {{else}}
    <td class="soloEntry">
      Ya haven't eaten any burgers!
    </td>
    {{/if}}
  </tbody>
</table>